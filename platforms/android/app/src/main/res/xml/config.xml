<?xml version='1.0' encoding='utf-8'?>
<widget id="io.Marcapps.todo" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <feature name="SplashScreen">
        <param name="android-package" value="org.apache.cordova.splashscreen.SplashScreen" />
        <param name="onload" value="true" />
    </feature>
    <feature name="Whitelist">
        <param name="android-package" value="org.apache.cordova.whitelist.WhitelistPlugin" />
        <param name="onload" value="true" />
    </feature>
    <name>to do list</name>
    <description>
        a beta version of a to do list app
    </description>
    <author email="marc.hypolite@gmail.com" href="https://Marcapps--keyman500.repl.co">
        Marc hypolite
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <splash density="port-hdpi" src="splash3.png" />
    <splash density="port-ldpi" src="splash3.png" />
    <splash density="port-mdpi" src="splash3.png" />
    <splash density="port-xhdpi" src="splash3.png" />
    <allow-intent href="market:*" />
    <preference name="loglevel" value="DEBUG" />
</widget>
