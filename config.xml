<?xml version='1.0' encoding='utf-8'?>
<widget id="io.Marcapps.todo" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>to do list</name>
    <description>
        a beta version of a to do list app
    </description>
    <author email="marc.hypolite@gmail.com" href="https://Marcapps--keyman500.repl.co">
        Marc hypolite
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
      <splash src="splash3.png" density="port-hdpi"/>
    <splash src="splash3.png" density="port-ldpi"/>
    <splash src="splash3.png" density="port-mdpi"/>
    <splash src="splash3.png" density="port-xhdpi"/>
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
